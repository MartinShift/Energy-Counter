<Window x:Class="Energy_Counter.AddCount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Energy_Counter"
        mc:Ignorable="d"
        Title="AddCount" Height="300" Width="250">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Enter New Total Amount" FontSize="20" FontFamily="Nexa" FontWeight="Bold"></TextBlock>
            <TextBox Name="amount" FontSize="20" FontFamily="Nexa" FontWeight="Bold"></TextBox>
        </StackPanel>
        <Button Content="Add" Foreground="WhiteSmoke" Background="Blue" VerticalAlignment="Top" FontSize="40" FontFamily="Nexa" FontWeight="Bold" Height="46" Margin="25,211,25,0" Click="Submit">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
